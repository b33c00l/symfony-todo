{% extends 'base.html.twig' %}
{% block title %}To do{% endblock %}
{% block body %}
	<div class="row">
	<table class="table col-10 offset-1">
		<thead>
			<tr>
				<th>ID</th>
				<th>Title</th>
				<th>Priority</th>
				<th>Status</th>
				<th>Category</th>
				<th>Created At</th>
				<th>Deadline</th>
				<th>Edit</th>
				<th>Delete</th>
			</tr>
		</thead>
		<tbody>
			{% for task in tasks %}
				<tr>
					<td>{{ task.id }}</td>
					<td>{{ task.title }}</td>
					<td>{{ task.priorityString }}</td>
					<td>{{ task.statusString }}</td>
					{% if task.category %}
						<td>{{ task.category }}</td>
					{% else %}
					{% endif %}
					<td>{{ task.createdAt.format('Y-m-d') }}</td>
					<td>{{ task.deadline.format('Y-m-d') }}</td>
					<td><a class="btn btn-outline-primary" href="{{ path('task.edit', {id: task.id} )}}">Edit</a></td>
					<td><a class="btn btn-outline-danger" href="{{ path('task.delete', {id: task.id} )}}">Delete</a></td>
				</tr>
            {% endfor %}
		</tbody>
	</table>
	</div>
{% endblock %}
