{% extends 'base.html.twig' %}
{% block title %}To do{% endblock %}
{% block body %}
    <div class="row">
        <table class="table col-10 offset-1">
            <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Tasks</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.title }}</td>
                    <td>
                    {% for task in category.tasks %}
                        {{ task.title }} <br>
                    {% endfor %}
                    </td>
                    <td><a class="btn btn-outline-primary" href="{{ path('category.edit', {id: category.id} )}}">Edit</a></td>
                    <td><a class="btn btn-outline-danger" href="{{ path('category.delete', {id: category.id} )}}">Delete</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
